<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <style>
    .profile-section {
      float: right;
      padding: 10px;
    }
  </style>
</head>
<body>

  <h2>Welcome, <%= user.email %></h2>

  <!-- Profile section -->
  <div class="profile-section">
    <h4>Your Profile</h4>
    <img src="/uploads/<%= user.profileImage %>" width="100" height="100" alt="Profile Image" />
  </div>

  <!-- You can add blog forms or dashboard content here -->

</body>
</html>


<h2>Dashboard</h2>
<img src="/<%= user.profileImage %>" width="100" style="float:right;"><br>

<form action="/blog/create" method="POST" enctype="multipart/form-data">
  <input name="title" placeholder="Blog Title" required><br>
  <textarea name="description" placeholder="Description" required></textarea><br>
  <input type="file" name="image" required><br>
  <button type="submit">Add Blog</button>
</form>

<h3>Your Blogs:</h3>
<table border="1">
  <tr><th>Title</th><th>Image</th><th>Description</th><th>Actions</th></tr>
  <% blogs.forEach(blog => { %>
    <tr>
      <td><%= blog.title %></td>
      <td><img src="/<%= blog.image %>" width="100"></td>
      <td><%= blog.description %></td>
      <td>
        <a href="/blog/view/<%= blog._id %>">View</a> |
        <a href="/blog/edit/<%= blog._id %>">Edit</a> |
        <a href="/blog/delete/<%= blog._id %>">Delete</a>
      </td>
    </tr>
  <% }) %>
</table>
